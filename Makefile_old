# Makefile: smmp (2005 Version)

#.SILENT:

.SUFFIXES:	.o .f
.f.o:
	$(C77) $(F_FLAGS) $<

# ==================================== Variables for compiling and linking
L_FLAGS=-fopenmp -static -o main.exe
F_FLAGS=-c -fopenmp
C77=gfortran
# ______________________________________________ Name of program
#PROG=smmp

