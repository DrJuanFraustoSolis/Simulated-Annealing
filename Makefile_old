showind.o bestind.o delta.o flowerb.o fupperb.o mutate.o \
tourn.o newchr.o xover.o initpop.o \
regul.o nursvr.o setting.o

# ============================================== Linking

$(PROG):	$(OBJ)
	$(C77) $(OBJ) $(L_FLAGS) 
#	$(C77) $(OBJ) $(L_FLAGS) $(OBJ)

# ______________________________________________ Dependancies
